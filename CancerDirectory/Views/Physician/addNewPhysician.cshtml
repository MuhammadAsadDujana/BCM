@{
    ViewBag.Title = "Add New Physician";
}

<link href="~/Content/theme/css/select2.min.css" rel="stylesheet" />
<link href="~/Content/theme/css/select2-bootstrap4.min.css" rel="stylesheet" />


<style>
    #imageUpload {
        display: none;
    }

    #profileImage {
        cursor: pointer;
    }

    #profile-container {
        width: 150px;
        height: 150px;
        overflow: hidden;
        -webkit-border-radius: 50%;
        -moz-border-radius: 50%;
        -ms-border-radius: 50%;
        -o-border-radius: 50%;
        border-radius: 50%;
        border: 2px solid #cacaca;
    }

        #profile-container img {
            width: 150px;
            height: 150px;
        }
</style>

<!-- Main content -->
<div class="container-fluid px-4">
    <div class="row">
        <div class="col-md-12">



            <form id="myfrm" enctype="multipart/form-data">
                <div class="row mb-3 pb-3">
                    <div class="col-lg-2">
                        <div class="image_wrap">

                            <div id="profile-container">
                                <image id="setImage" src="~/Content/theme/img/profile.png" class="img-fluid" alt="" />
                            </div>

                            <input id="imageUpload" type="file"
                                   placeholder="Photo" name="imageUpload" accept="image/*">

                            @*<div class="profile_img">
                            <img id="profileImage" src="~/Content/theme/img/profile.png" class="img-fluid" alt="">
                        </div>*@


                            <div class="profile_btn_group">

                                <span id="profileImage" class="btnLink profile_upload_btn">
                                    <i class="fas fa-camera"></i>
                                </span>
                                @*<span class="btnLink profile_setting_btn">
                                <i class="fas fa-tools"></i>
                            </span>*@
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.row -->
                <!-- row -->
                <div class="profile-form mb-5">
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Credentials*</label>


                                <select required="" id="ddlCredentials" class="select2bs4 select2-hidden-accessible" multiple="multiple" data-placeholder="Select credentials" style="width: 100%;" data-select2-id="23" tabindex="-1" aria-hidden="true">
                                    @{
                                        IEnumerable<OA.Data.Model.Credentials> lstCredentials = ViewBag.ddlCredentials;
                                        if (lstCredentials != null)
                                        {
                                            foreach (var item in lstCredentials)
                                            {
                                                <option data-select2-id="@item.CredentialsId" value="@item.CredentialsId">@item.CredentialsTitle</option>
                                            }
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Status*</label>
                                <select required="" id="ddlStatus" class="form-control" placeholder="Select status">
                                    @*<option value="-1">Select</option>*@
                                    <option value="1">Published</option>
                                    <option value="0">Unpublished</option>
                                    @*<option value="2">Blocked</option>*@
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>First Name*</label>
                                <input required="" id="txtFirstName" type="text" class="form-control" name="" placeholder="John">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Last Name*</label>
                                <input required="" id="txtLastName" type="text" class="form-control" name="" placeholder="Doe">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Direct Phone</label>
                                @*<input pattern="\(\d{3}\)[ ]?\d{3}[-]?\d{4}" maxlength="14" required="" id="txtDirectPhone" type="tel" class="form-control" name="" placeholder="(xxx) xxx-xxxx">*@
                                <input type="tel" onkeypress="return isNumberKey(event)" maxlength="10"  id="txtDirectPhone"  class="form-control" name="" placeholder="xxx xxx xxxx numbers only">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Office Phone</label>
                                @*<input pattern="\(\d{3}\)[ ]?\d{3}[-]?\d{4}" maxlength="14" required="" id="txtOfficePhone" type="tel" class="form-control" name="" placeholder="(xxx) xxx-xxxx">*@
                                <input  type="tel" onkeypress="return isNumberKey(event)" maxlength="10"  id="txtOfficePhone"  class="form-control" name="" placeholder="xxx xxx xxxx numbers only">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input  id="txtEmail" type="email" class="form-control" name="" placeholder="john@gmail.com">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Language</label>
                                <select id="ddlLanguages" class="language select2-hidden-accessible" multiple="" data-placeholder="Select language" style="width: 100%;" data-select2-id="10" tabindex="-1" aria-hidden="true">
                                    @{
                                        IEnumerable<OA.Data.Model.Language> lstLanguages = ViewBag.ddlLanguages;
                                        if (lstLanguages != null)
                                        {
                                            foreach (var item in lstLanguages)
                                            {
                                                <option data-select2-id="@item.LanguageId" value="@item.LanguageId">@item.LanguageTitle</option>
                                            }
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Joining Date*</label>
                                <input placeholder="Select a date from calendar" required="" id="txtJoiningDate" type="date" class="form-control" name="">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Discipline</label>
                                <select id="ddlDisciplines" class="status select2-hidden-accessible" multiple="" data-placeholder="Select discipline" style="width: 100%;" data-select2-id="2" tabindex="-1" aria-hidden="true">
                                    @{
                                        IEnumerable<OA.Data.Model.Discipline> lstDisciplines = ViewBag.ddlDisciplines;
                                        if (lstDisciplines != null)
                                        {
                                            foreach (var item in lstDisciplines)
                                            {
                                                <option data-select2-id="@item.DisciplineId" value="@item.DisciplineId">@item.DisciplineTitle</option>
                                            }
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Specialties</label>
                                <select  id="ddlSpecialties" class="status select2-hidden-accessible" multiple="" data-placeholder="Select specialties" style="width: 100%;" data-select2-id="20" tabindex="-1" aria-hidden="true">
                                    @{
                                        IEnumerable<OA.Data.Model.Specialties> lstSpecialties = ViewBag.ddlSpecialties;
                                        if (lstSpecialties != null)
                                        {
                                            foreach (var item in lstSpecialties)
                                            {
                                                <option data-select2-id="@item.SpecialtyId" value="@item.SpecialtyId">@item.SpecialtyTitle</option>
                                            }
                                        }

                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Diesease Treatment Team</label>
                                <select  id="ddlTreatmentTeams" class="status select2-hidden-accessible" multiple="" data-placeholder="Select diesease treatment team" style="width: 100%;" data-select2-id="21" tabindex="-1" aria-hidden="true">
                                    @{
                                        IEnumerable<OA.Data.Model.TreatmentTeam> lstTreatmentTeam = ViewBag.ddlTreatmentTeams;
                                        if (lstTreatmentTeam != null)
                                        {
                                            foreach (var item in lstTreatmentTeam)
                                            {
                                                <option data-select2-id="@item.TreatmentTeamId" value="@item.TreatmentTeamId">@item.DiseaseTitle</option>
                                            }
                                        }

                                    }
                                </select>
                            </div>


                            <div class="separator"></div>
                            <div class="form-group">
                                <label id="ErrorMessage" style="color: red;"></label>
                            </div>

                        </div>


                    </div>

                    <div class="buttons-group text-center mt-4">
                        <a href="~/Physician/physiciansManagementList" class="btn mr-2">Cancel</a>
                        @*<button id="btnSave" type="submit" onclick="javascript:dataAccess.loginService.addPhysician()" class="btn flat-btn ml-2">Save</button>*@
                        <button id="btnSave" type="button" class="btn flat-btn ml-2">Save</button>
                    </div>
                </div>
            </form>

            <div class="loading">
                @*<img id="loading-image" src="~/Content/theme/img/preloader.gif" alt="Loading..." />*@
            </div>

        </div>
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->
<!-- /.content -->

