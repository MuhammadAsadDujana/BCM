            ({ value }) => value
        );

        const selectedTreatmentTeams = Array.from(
            ddlTreatmentTeams.querySelectorAll(':scope > option:checked'),
            ({ value }) => value
        );
   
        dataAccess.physicianService.addPhysician(selectedCredentials, selectedLanguages, selectedDisciplines, selectedSpecialties, selectedTreatmentTeams);

    });


