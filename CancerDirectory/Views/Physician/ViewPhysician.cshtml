                        $('#setImage').attr('src', x.target.result);
                    }
                    else {
                        swal("Warning! invalid image!", "size must be 100x100 or less then 100x100 and type:png/jpg/jpeg");
                        //alert(width + " " + height + " " + type);
                    }

                }



            }
        }
    }

    $("#imageUpload").change(function () {
        fasterPreview(this);
    });


